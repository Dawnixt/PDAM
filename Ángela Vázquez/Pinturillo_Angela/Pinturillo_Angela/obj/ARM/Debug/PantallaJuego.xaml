<Page x:ConnectionId='1'
    x:Class="Pinturillo_Angela.PantallaJuego"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pinturillo_Angela"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <RelativePanel>
        <Border x:ConnectionId='2' 
            Name="borderStackPanel"
            RelativePanel.AlignTopWithPanel="True"
            RelativePanel.AlignLeftWithPanel="True"
            RelativePanel.Above="backArrow"
            Width="150"
            Margin="10,10,0,0"
            BorderBrush="Red"   
                CornerRadius="30" 
                >
            <StackPanel x:ConnectionId='11'
            
                Opacity="0.75"
            Background="Bisque"
            Name="stkpanelListados"
            >
                <ListView x:ConnectionId='12'
                Name="listadoSalas"
                ItemsSource="{Binding listadoSalas}"
                >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <RelativePanel
                        
                        >

                                <AppBarButton
                                        Name="icon"
                                       
                                Icon="Accept"
                                        RelativePanel.AlignLeftWithPanel="True"
                                        RelativePanel.AlignTopWithPanel="True"
                                >

                                </AppBarButton>
                                <TextBlock  
                                Foreground="Black"
                                FontSize="15"
                                        Name="txtNombre"
                                        RelativePanel.AlignTopWithPanel="True"
                                        RelativePanel.RightOf="icon"
                                Margin="0,10,5,0" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock
                                        RelativePanel.Above="txtNombre"
                                        
                                
                                Foreground="Black"
                                FontSize="10"
                                >100 puntos</TextBlock>

                            </RelativePanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Border>

        <Border x:ConnectionId='3'
            Name="borderCanvas"
            RelativePanel.AlignTopWithPanel="True"
            RelativePanel.RightOf="borderStackPanel"
            RelativePanel.AlignBottomWithPanel="True"
            Margin="15"
            RelativePanel.LeftOf="chatMensajes"
            
            >
            <RelativePanel>
                <Border
                    Margin="15"
                    CornerRadius="100"
                    Padding="15"
                    BorderBrush="Red"
                    Background="Red"
                    >
                    <TextBlock
                        FontSize="50"
                        Text="60"
                        Foreground="Black"
                        >
                        
                    </TextBlock>

                    </Border>

                <TextBlock
                    RelativePanel.AlignTopWithPanel="True"
                    Margin="15"
                    RelativePanel.AlignHorizontalCenterWithPanel="True"
                    FontSize="50"
                    
                    Text="RATON"
                    >
                    
                </TextBlock>

                <TextBlock
                    RelativePanel.AlignBottomWithPanel="True"
                    Margin="15"
                    RelativePanel.AlignRightWithPanel="True"
                    FontSize="20"
                    Foreground="Black"
                    Text="Ronda 1/3"
                    >

                </TextBlock>
<!--
                <InkCanvas
            Name="inkCanvas"
                    RelativePanel.AlignTopWithPanel="True"
                    RelativePanel.AlignBottomWithPanel="True"
                    RelativePanel.AlignLeftWithPanel="True"
                    RelativePanel.AlignRightWithPanel="True"
            />
                -->
                


                <InkCanvas x:ConnectionId='9' x:Name="inkCanvas"
                    Height="1000"
                           Width="1000"
                           />
                <InkToolbar x:ConnectionId='10' x:Name="inkToolbar"
          VerticalAlignment="Top"
                           RelativePanel.AlignRightWithPanel="True"
                                               />

                
            </RelativePanel>
            
        </Border>
        
            
    

        <ListView x:ConnectionId='4'
            Name="chatMensajes"
            Background="White"
                RelativePanel.AlignRightWithPanel="True"
            RelativePanel.AlignTopWithPanel="True"
            RelativePanel.Above="inputMensajes"
            Width="200"
            Margin="15"
                ItemsSource="{Binding listadoSalas}"
                >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <RelativePanel
                        
                        >

                        <AppBarButton
                                        Name="icon"
                                        Margin="0,10,5,0"
                                Icon="Permissions"
                                        RelativePanel.AlignLeftWithPanel="True"
                                        RelativePanel.AlignTopWithPanel="True"
                                >

                        </AppBarButton>
                        <TextBlock  
                                Foreground="Black"
                                FontSize="30"
                                        Name="txtSala"
                                        RelativePanel.AlignTopWithPanel="True"
                                        RelativePanel.RightOf="icon"
                                Margin="0,10,5,0" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBlock
                                        RelativePanel.RightOf="txtSala"
                                        RelativePanel.AlignBottomWith="txtSala"
                                Margin="100,10,5,0"
                                Foreground="Black"
                                FontSize="20"
                                >3/5</TextBlock>

                    </RelativePanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBox x:ConnectionId='5'
            Name="inputMensajes"
            RelativePanel.LeftOf="btnSend"
            Width="145"
            Height="50"
            Margin="10,15,0,15"
            RelativePanel.AlignBottomWithPanel="True"
            
            >
            
        </TextBox>
        <AppBarButton x:ConnectionId='6'
            Name="btnSend"
            RelativePanel.AlignRightWithPanel="True"
            RelativePanel.AlignBottomWithPanel="True"
            Icon="Send"
            
            >
            
        </AppBarButton>
        <Path x:ConnectionId='7' Stretch="Fill" 
              Name="backArrow"
              RelativePanel.AlignLeftWithPanel="True"
              RelativePanel.AlignBottomWithPanel="True"
              Fill="NavajoWhite" 
              Margin="0,10,30,0"
          Data="M 0,110 70,110 45,90 75,90 120,120 75,150 45,150 70,130 0,130 Z"  Width="100" Height="100"
          RenderTransformOrigin=".5,.5" UseLayoutRounding="False">
            <Path.RenderTransform>
                <RotateTransform Angle="180" />
            </Path.RenderTransform>
        </Path>
        
    </RelativePanel>
</Page>

